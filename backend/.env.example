# Database - Docker Compose Configuration
DATABASE_URL="postgresql://quizup_user:quizup_password@postgres:5432/quizup_db"
REDIS_URL="redis://redis:6379"

# Server
PORT=3000
NODE_ENV="development"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# WebSocket Match Service
MATCH_SERVICE_PORT=3001
MATCH_SERVICE_URL="http://localhost:3001"

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR="./uploads"

# Cache TTL (in seconds)
CACHE_TTL=300


DB_NAME=quizup_db
DB_USER=quizup_user
DB_PASSWORD=quizup_password
DB_HOST=postgres
DB_PORT=5432