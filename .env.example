# Environment Configuration
NODE_ENV=development

# Database Configuration
POSTGRES_DB=quizup_db
POSTGRES_USER=quizup_user
POSTGRES_PASSWORD=quizup_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3000
MATCH_SERVICE_PORT=3001
FRONTEND_PORT=5173

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info

# Swagger Documentation
ENABLE_SWAGGER=true

# Admin Tools
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# Monitoring
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Frontend Build Variables
VITE_API_BASE_URL=http://localhost:3000
VITE_WEBSOCKET_URL=ws://localhost:3001
VITE_APP_NAME=QuizUP
VITE_APP_VERSION=1.0.0

# Production URLs (Cloudflare Tunnel)
VITE_PROD_API_BASE_URL=https://api.quizdash.dpdns.org
VITE_PROD_WEBSOCKET_URL=wss://match.quizdash.dpdns.org
VITE_PROD_GRAFANA_URL=https://grafana.quizdash.dpdns.org
VITE_PROD_ADMINER_URL=https://adminer.quizdash.dpdns.org

# Ngrok Configuration (Get your token from https://dashboard.ngrok.com/get-started/your-authtoken)
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# NGINX LOAD BALANCER (Production)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=csv,xlsx,xls,json

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@quizup.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HELMET_ENABLED=true
CSRF_ENABLED=true
SESSION_SECRET=your-session-secret-change-in-production
COOKIE_SECURE=false
TRUST_PROXY=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# =============================================================================
# MATCH CONFIGURATION
# =============================================================================
MAX_MATCH_DURATION=1800
DEFAULT_QUESTION_TIME_LIMIT=30
MAX_PLAYERS_PER_MATCH=10
MATCH_CLEANUP_INTERVAL=300
RECONNECTION_WINDOW=60

# =============================================================================
# AI OPPONENT CONFIGURATION
# =============================================================================
AI_ENABLED=true
AI_RESPONSE_DELAY_MIN=1000
AI_RESPONSE_DELAY_MAX=5000
AI_DIFFICULTY_ROOKIE_ACCURACY=60
AI_DIFFICULTY_SMART_ACCURACY=75
AI_DIFFICULTY_GENIUS_ACCURACY=90

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# =============================================================================
# DEVELOPMENT/TESTING FLAGS
# =============================================================================
SEED_DATABASE=true
ENABLE_DEBUG_ROUTES=true
MOCK_EXTERNAL_SERVICES=true
SKIP_AUTH_IN_DEV=false
ENABLE_QUERY_LOGGING=false

# =============================================================================
# CLOUDFLARE TUNNEL CONFIGURATION
# =============================================================================
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id-here
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here

# Domain Configuration
DOMAIN=quizdash.dpdns.org
FRONTEND_DOMAIN=quizdash.dpdns.org
API_DOMAIN=api.quizdash.dpdns.org
GRAFANA_DOMAIN=grafana.quizdash.dpdns.org
ADMINER_DOMAIN=adminer.quizdash.dpdns.org
REDIS_DOMAIN=redis.quizdash.dpdns.org
PROMETHEUS_DOMAIN=prometheus.quizdash.dpdns.org
INFLUX_DOMAIN=influx.quizdash.dpdns.org
MATCH_DOMAIN=match.quizdash.dpdns.org

# =============================================================================
# INFLUXDB CONFIGURATION (for Cloudflare Analytics)
# =============================================================================
INFLUXDB_PORT=8086
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123
INFLUXDB_ORG=quizup
INFLUXDB_BUCKET=cloudflare
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_RETENTION=30d

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=quizup
COMPOSE_FILE=docker-compose.yml
RESTART_POLICY=unless-stopped
