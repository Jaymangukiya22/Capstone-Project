{
  "title": "Working Metrics Dashboard",
  "uid": "working-metrics",
  "tags": ["metrics", "working", "basic"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_request_duration_seconds_count[1m]))",
          "legendFormat": "Total Requests/sec",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        }
      ]
    },
    {
      "id": 2,
      "title": "HTTP Request Duration (p99)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[1m])) by (le)) * 1000",
          "legendFormat": "p99 Latency",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Latency"
        }
      ]
    },
    {
      "id": 3,
      "title": "CPU Usage",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"api-server\"}[1m]) * 100",
          "legendFormat": "Backend CPU %",
          "refId": "A"
        },
        {
          "expr": "rate(process_cpu_seconds_total{job=\"match-server-master\"}[1m]) * 100",
          "legendFormat": "Match Server CPU %",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "label": "CPU Usage"
        }
      ]
    },
    {
      "id": 4,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes / (1024*1024)",
          "legendFormat": "{{job}} Memory (MB)",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "decbytes",
          "label": "Memory"
        }
      ]
    },
    {
      "id": 5,
      "title": "Match Server Metrics",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "matchserver_active_matches_total",
          "legendFormat": "Active Matches",
          "refId": "A"
        },
        {
          "expr": "matchserver_connected_users_total",
          "legendFormat": "Connected Users",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count"
        }
      ]
    },
    {
      "id": 6,
      "title": "Redis Metrics",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "redis_connected_clients",
          "legendFormat": "Connected Clients",
          "refId": "A"
        },
        {
          "expr": "redis_memory_used_bytes / (1024*1024)",
          "legendFormat": "Memory Used (MB)",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Count/MB"
        }
      ]
    },
    {
      "id": 7,
      "title": "Services Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "up",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
      "targets": [
        {
          "expr": "matchserver_uptime_seconds / 3600",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "h",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 24 }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Total HTTP Requests",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "sum(http_request_duration_seconds_count)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 1000 }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Active Processes",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
      "targets": [
        {
          "expr": "count(up == 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 3 },
              { "color": "green", "value": 5 }
            ]
          }
        }
      }
    }
  ]
}
